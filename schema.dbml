enum reaction_type {
  like
  dislike
}

enum video_visibility {
  private
  public
}

table categories {
  id uuid [pk, not null, default: `gen_random_uuid()`]
  name text [not null, unique]
  description text
  created_at timestamp [not null, default: `now()`]
  updated_at timestamp [not null, default: `now()`]

  indexes {
    name [name: 'name_idx', unique]
  }
}

table comment_reactions {
  user_id uuid [not null]
  comment_id uuid [not null]
  type reaction_type [not null]
  created_at timestamp [not null, default: `now()`]
  updated_at timestamp [not null, default: `now()`]

  indexes {
    (user_id, comment_id) [pk]
  }
}

table comments {
  id uuid [pk, not null, default: `gen_random_uuid()`]
  user_id uuid [not null]
  video_id uuid [not null]
  value text [not null]
  created_at timestamp [not null, default: `now()`]
  updated_at timestamp [not null, default: `now()`]
}

table subscriptions {
  viewer_id uuid [not null]
  creator_id uuid [not null]
  created_at timestamp [not null, default: `now()`]
  updated_at timestamp [not null, default: `now()`]

  indexes {
    (viewer_id, creator_id) [pk]
  }
}

table users {
  id uuid [pk, not null, default: `gen_random_uuid()`]
  clerk_id text [not null, unique]
  name text [not null]
  image_url text [not null]
  created_at timestamp [not null, default: `now()`]
  updated_at timestamp [not null, default: `now()`]

  indexes {
    clerk_id [name: 'clerk_id_idx', unique]
  }
}

table video_reactions {
  user_id uuid [not null]
  video_id uuid [not null]
  type reaction_type [not null]
  created_at timestamp [not null, default: `now()`]
  updated_at timestamp [not null, default: `now()`]

  indexes {
    (user_id, video_id) [pk]
  }
}

table video_views {
  user_id uuid [not null]
  video_id uuid [not null]
  created_at timestamp [not null, default: `now()`]
  updated_at timestamp [not null, default: `now()`]

  indexes {
    (user_id, video_id) [pk]
  }
}

table videos {
  id uuid [pk, not null, default: `gen_random_uuid()`]
  title text [not null]
  description text
  mux_status text
  mux_asset_id text [unique]
  mux_upload_id text [unique]
  mux_playback_id text [unique]
  mux_track_id text [unique]
  mux_track_status text
  thumbnail_url text
  thumbnail_key text
  preview_url text
  preview_key text
  duration integer [not null, default: 0]
  visibility video_visibility [not null, default: 'private']
  user_id uuid [not null]
  category_id uuid
  created_at timestamp [not null, default: `now()`]
  updated_at timestamp [not null, default: `now()`]
}

